%p#notice= notice

.panel.panel-default.center-block#painelEquipe
	.panel-heading
		.row
			.col-md-6
				%h3.panel-title= @team.nome
			.col-md-6
				.pull-right 
					%button.btn.btn-primary.btn-xs
						= glyph(:pencil)
						= link_to 'Editar', edit_team_path(@team), {id: 'btn-link-to'}
	.panel-body
		.row
			.col-md-6
				%b Membros da Equipe
				%hr
				- @team.members.each do |m|
					%li= m.email
			.col-md-6
				.center-block
					%b Membros de DisponÃ­veis
					%hr
					= simple_form_for @team do |f|
						= f.association :members, :label => false,as: :check_boxes, label_method: :email, include_blank: false
						= f.submit 'Adicionar'
						 
